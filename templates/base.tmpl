<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="google-signin-client_id" content="447197900624-efd1mm23kqvhgu71v5csdb7n6c9dfpq8.apps.googleusercontent.com">
    <style type="text/css">
      body {background-color: #20242d;}
    </style>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <title>Outgain &mdash; {{.Title}}</title>
  </head>
  <body>
    <img src="/static/images/outgain_logo.svg" alt="Outgain Logo" width="240"/>
    <h1>{{.Message}}</h1>
    <div class="g-signin2" data-onsuccess="onSignIn"></div>
    <script type="text/javascript">
      function onSignIn(googleUser) {
        var id_token = googleUser.getAuthResponse().id_token;
        var xhr = new XMLHttpRequest();
        xhr.open('POST', 'http://localhost:8080/signin');
        xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
        xhr.onload = function() {
          console.log('Signed in.');
        };
        xhr.send('idtoken=' + id_token);
      }
    </script>
  </body>
</html>
